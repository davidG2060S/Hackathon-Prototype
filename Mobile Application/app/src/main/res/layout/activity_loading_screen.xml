<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LoadingScreen">

    <ImageView
        android:id="@+id/imgViewBarangayLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/company_icon" />

    <ProgressBar
        android:id="@+id/prgsBar"
        style="?android:attr/progressBarStyle"
        android:indeterminateTint="@android:color/holo_blue_light"
        android:layout_width="107dp"
        android:layout_height="98dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgViewBarangayLogo"
        app:layout_constraintEnd_toEndOf="@+id/imgViewBarangayLogo"
        app:layout_constraintStart_toStartOf="@+id/imgViewBarangayLogo"
        app:layout_constraintTop_toTopOf="@+id/imgViewBarangayLogo"
        app:layout_constraintVertical_bias="0.815" />
</androidx.constraintlayout.widget.ConstraintLayout>